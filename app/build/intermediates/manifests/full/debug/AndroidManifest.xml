<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="iotdf.iotgateway"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >
        <activity android:name="iotdf.iotgateway.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="iotdf.iotgateway.DevicePanel" />
        <activity android:name="iotdf.iotgateway.ChooseDevice" />
        <activity android:name="iotdf.iotgateway.Register" />

        <service
            android:name="iotdf.iotgateway.ConServ.Myservice"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="iotdf.iotgateway.ConServ.ConSetting" />
        <activity android:name="iotdf.iotgateway.data.DataTest" />

        <service
            android:name="iotdf.iotgateway.ConSens.LocalService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>