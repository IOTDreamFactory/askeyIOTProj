<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="iotdf.iotgateway.Register"
    android:background="@color/colore8f3f8">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TV_usr"
        android:text="USERNAME"
        android:textSize="18dp"
        android:textColor="@color/color81a8b8"
        android:layout_below="@+id/sign_back"
        android:layout_alignLeft="@id/sign_back"
        android:layout_marginTop="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TV_pwd"
        android:text="PASSWORD"
        android:textSize="18dp"
        android:textColor="@color/color81a8b8"
        android:layout_below="@+id/TV_usr"
        android:layout_alignLeft="@id/TV_usr"
        android:layout_marginTop="65dp" />

    <EditText
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ET_USR"
        android:layout_marginLeft="90dp"
        android:textColor="@color/colore8f3f8"
        android:background="@drawable/roundedrectangle"
        android:enabled="true"
        android:editable="true"
        android:textSize="25dp"
        android:textCursorDrawable="@null"
        android:layout_alignBaseline="@id/TV_usr"
        android:layout_toEndOf="@+id/TV_usr"
        android:layout_marginStart="26dp" />

    <EditText
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/ET_PWD"
        android:background="@drawable/roundedrectangle"
        android:textColor="@color/colore8f3f8"
        android:password="true"
        android:layout_alignBaseline="@id/TV_pwd"
        android:layout_toEndOf="@id/TV_pwd"
        android:layout_centerVertical="true"
        android:textSize="25dp"
        android:textCursorDrawable="@null"
        android:layout_marginStart="26dp"  />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_back"
        android:background="@drawable/registerlogo"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ImageButton_submit"
        android:layout_below="@+id/TV_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/submit" />

</RelativeLayout>
