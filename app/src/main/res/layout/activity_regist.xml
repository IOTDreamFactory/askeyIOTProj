<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="iotdf.iotgateway.Regist"
    android:background="@drawable/sign_bg">


    <Button
        android:layout_width="800px"
        android:layout_height="100px"
        android:id="@+id/button_login"
        android:background="@drawable/sign_button"
        android:layout_marginTop="60dp"
        android:layout_alignTop="@+id/signAddr"
        android:layout_alignLeft="@+id/signAddr" />

    <ImageView
        android:id="@+id/signUser"
        android:background="@drawable/login_user"
        android:layout_width="800px"
        android:layout_height="100px"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="40dp"
        />
    <ImageView
        android:id="@+id/signPass"
        android:background="@drawable/login_pass"
        android:layout_width="800px"
        android:layout_height="100px"
        android:layout_marginTop="60dp"
        android:layout_alignTop="@+id/signUser"
        android:layout_alignLeft="@+id/signUser"
        />
    <ImageView
        android:id="@+id/signAddr"
        android:background="@drawable/sign_add"
        android:layout_width="800px"
        android:layout_height="100px"
        android:layout_marginTop="60dp"
        android:layout_alignTop="@+id/signPass"
        android:layout_alignLeft="@+id/signPass"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/SignUserEdit"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="90dp"
        android:textColor="@color/colorNormalBlue"
        android:hint="UserName"
        android:textColorHint="@color/colorHintBlue"
        android:background="@null"
        android:enabled="true"
        android:editable="true"
        android:textSize="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/SignPassEdit"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:textColor="@color/colorNormalBlue"
        android:textColorHint="@color/colorHintBlue"
        android:password="true"
        android:hint="Password"
        android:layout_alignTop="@+id/SignUserEdit"
        android:layout_alignLeft="@+id/SignUserEdit"
        android:layout_alignStart="@+id/SignUserEdit"
        android:textSize="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/SignAddrEdit"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:textColor="@color/colorNormalBlue"
        android:textColorHint="@color/colorHintBlue"
        android:password="true"
        android:hint="Address"
        android:layout_alignTop="@+id/SignPassEdit"
        android:layout_alignLeft="@+id/SignPassEdit"
        android:layout_alignStart="@+id/SignPassEdit"
        android:textSize="25dp" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/sign_back"
        android:background="@drawable/sign_ico"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp" />

</RelativeLayout>
