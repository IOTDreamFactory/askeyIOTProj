<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="iotdf.iotgateway.data.DataTest">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="auto"
        android:id="@+id/button_auto"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Back"
        android:id="@+id/button_back"
/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/arduinoNum"
        android:id="@+id/ET_arduinoNum"
        android:layout_marginBottom="23dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/time"
        android:id="@+id/ET_Time"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/humidity"
        android:id="@+id/ET_Humidity" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/temperature"
        android:id="@+id/ET_Temperature"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/water"
        android:id="@+id/ET_Water"
        android:layout_marginTop="33dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/brightness"
        android:id="@+id/ET_Brightness"
        android:layout_marginBottom="36dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_accept"
        android:text="@string/Accept" />

</LinearLayout>
