<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="iotdf.iotgateway.MainActivity"
    android:background="@drawable/login_bg">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_button"
        android:id="@+id/startService"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_button"
        android:id="@+id/stopService"
        android:layout_alignBottom="@+id/startService"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <Button
        android:layout_width="800px"
        android:layout_height="100px"
        android:id="@+id/button_login"
        android:background="@drawable/login_button"
        android:layout_marginTop="60dp"
        android:layout_alignTop="@+id/imagePass"
        android:layout_alignLeft="@+id/imagePass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mDeviceID"
        android:id="@+id/target_text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageUser"
        android:background="@drawable/login_user"
        android:layout_width="800px"
        android:layout_height="100px"
        android:layout_marginTop="295dp"
        android:layout_marginLeft="40dp"
        />

    <ImageView
        android:id="@+id/imagePass"
        android:background="@drawable/login_pass"
        android:layout_width="800px"
        android:layout_height="100px"
        android:layout_marginTop="60dp"
        android:layout_alignTop="@+id/imageUser"
        android:layout_alignLeft="@+id/imageUser"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/LoginUser"
        android:layout_marginTop="295dp"
        android:layout_marginLeft="90dp"
        android:textColor="@color/colorNormalBlue"
        android:hint="UserName"
        android:textColorHint="@color/colorHintBlue"
        android:background="@null"
        android:enabled="true"
        android:editable="true"
        android:textSize="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/LoginPassword"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:textColor="@color/colorNormalBlue"
        android:textColorHint="@color/colorHintBlue"
        android:password="true"
        android:hint="Password"
        android:layout_alignTop="@+id/LoginUser"
        android:layout_alignLeft="@+id/LoginUser"
        android:layout_alignStart="@+id/LoginUser"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your password?"
        android:id="@+id/button_forgot"
        android:layout_below="@+id/button_login"
        android:layout_alignLeft="@+id/button_login"
        android:layout_alignStart="@+id/button_login"
        android:textColor="@color/colorNormalBlue"
        android:textSize="8dp"
        android:background="@null" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need to sign up?"
        android:id="@+id/button_sign"
        android:textColor="@color/colorNormalBlue"
        android:textSize="8dp"
        android:background="@null"
        android:layout_below="@+id/button_login"
        android:layout_alignRight="@+id/button_login"
        android:layout_alignEnd="@+id/button_login" />


</RelativeLayout>
